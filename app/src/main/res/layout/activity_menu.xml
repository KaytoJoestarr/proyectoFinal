<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/user_imageview"
        android:layout_width="125dp"
        android:layout_height="164dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_imageview"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="Nombre de Usuario" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="28dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:padding="50dp">

        <Button
            android:id="@+id/mis_tareas_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_imageview"
            android:layout_centerHorizontal="true"
            android:text="Mis Tareas" />

        <Button
            android:id="@+id/hogar_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mis_tareas_button"
            android:layout_centerHorizontal="true"
            android:text="Hogar" />

        <Button
            android:id="@+id/habitacion_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hogar_button"
            android:layout_centerHorizontal="true"
            android:text="Habitación" />

        <Button
            android:id="@+id/notas_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/habitacion_button"
            android:layout_centerHorizontal="true"
            android:text="Notas" />

        <Button
            android:id="@+id/calendario_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/habitacion_button"
            android:layout_centerHorizontal="true"
            android:text="Calendario" />

        <Button
            android:id="@+id/puntuacion_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendario_button"
            android:layout_centerHorizontal="true"
            android:text="Puntuación" />


    </LinearLayout>

</RelativeLayout>
